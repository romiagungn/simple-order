{
   "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
         "@/*": ["*"]
      },
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "dist"]
}
